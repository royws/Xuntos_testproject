@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "Master.cshtml";
}

		<!-- Banner -->
			<section id="banner">
				<i class="icon fa-diamond"></i>
				<h2>@Model.Value("pageTitle")</h2>
				<p>@Model.Value("bodyText")</p>
			</section>

		<!-- One -->
			<section id="one" class="wrapper style1">
				<div class="inner">
					<article class="feature left">
					    @{
                            var articleImg = Model.Value<IPublishedContent>("firstArticleImage", fallback: Fallback.ToAncestors);
                            bool hasarticleImg = articleImg!=null;
                        }
                        @if (hasarticleImg){
						    <span class="image"><img src="@articleImg.Url" alt="" /></span>
                        }else {}
						<div class="content">
							<h2>@Model.Value("firstArticleTitle")</h2>
							<p>@Model.Value("firstArticleParagraph")</p>
							<br>
							<br>
							<ul class="actions">
								<li>
									<a href="@Model.Value("newsPageLink", fallback: Fallback.ToAncestors)" class="button alt">@Model.Value("newsPageName", fallback: Fallback.ToAncestors)</a>
								</li>
							</ul>
						</div>
					</article>
					<article class="feature right">
					    @{
                            var articleImg2 = Model.Value<IPublishedContent>("secondArticleImage", fallback: Fallback.ToAncestors);
                            bool hasarticleImg2 = articleImg!=null;
                        }
                        @if (hasarticleImg2){
						    <span class="image"><img src="@articleImg2.Url" alt="" /></span>
                        }else {}
						<div class="content">
							<h2>@Model.Value("secondArticleTitle")</h2>
							<p>@Model.Value("secondArticleParagraph")</p>
							<ul class="actions">
								<li>
								    <a href="@Model.Value("apiPageLink", fallback: Fallback.ToAncestors)" class="button alt">@Model.Value("apiPageName", fallback: Fallback.ToAncestors)</a>
								</li>
							</ul>
						</div>
					</article>
				</div>
			</section>

		<!-- Two -->
			<section id="two" class="wrapper special">
				<div class="inner">
					<header class="major narrow">
						<h2>@Model.Value("sectionTwoTitle")</h2>
						<p>@Model.Value("sectionTwoBodyText")</p>
					</header>
					<div class="image-grid">
                        @{
                            var imageList = Model.Value<IEnumerable<IPublishedContent>>("sectionTwoImages");
                        }
                        
                        @foreach (var image in imageList) {
                            <a href="#" class="image"><img src="@image.Url" alt= "@image.Name image"/></a>
                        }
					</div>
				</div>
			</section>

		<!-- Three -->
			<section id="three" class="wrapper style3 special">
				<div class="inner">
					<header class="major narrow	">
				        <h2>@Model.Value("sectionThreeTitle")</h2>
						<p>@Model.Value("sectionThreeBodyText")</p>
					</header>
					<ul class="actions">
						<li><a href="http://37.97.203.154/" class="button big alt">@Model.Value("sectionThreeLinkText")</a></li>
					</ul>
				</div>
			</section>